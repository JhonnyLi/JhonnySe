@model JhonnySe.Models.GitHub.MainViewModel
@{
    ViewData["Title"] = "Jhonny.se";
    Layout = "~/Views/_Layout.cshtml";
}
<script>
    var logoUrl = @Json.Serialize(Model.avatar_url);
    console.log(logoUrl);
</script>
<H1>@Model.OwnerName</H1>
<div id="avatar" style="background-image:url(@Model.avatar_url)"><img src="@Model.avatar_url"/></div>
<h2>HEj: @Model.OauthCode</h2>
<div style="width:70%; display:inline-block;">
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Created</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var repo in Model.Repositorys)
            {
                <tr>
                    <td>@repo.Name</td>
                    <td>@repo.CreatedDate.ToShortDateString()</td>
                    <td>@repo.Description</td>
                </tr>

            }
        </tbody>
    </table>
</div>
<div style="width:49.5%; display:inline-block;"><a href="@Model.GitHubUrl">GitHub Profile</a></div>
