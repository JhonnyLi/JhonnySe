@{
    Layout = "~/Views/_Layout.cshtml";
}

<div class="container">
    <div id="avatar" style="background-image:url({{model.avatar_url}})">
        <H1>{{model.ownerName}}</H1>
    </div>
</div>

<hr />
<div id="carousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carousel" data-slide-to="{{$index}}" ng-repeat="repos in model.repositorys | orderBy:'-updatedAt'" ng-class="{'active': $first}"></li>
    </ol>
    <div class="carousel-inner">
        <div ng-repeat="repos in model.repositorys | orderBy:'-updatedAt'" class="carousel-item" ng-class="{'active': $first}">
            <div class="card">
                <img alt="GitHub last commit" class="card-img-top" src="~/Images/GitHub_Logo.png">
                <div class="card-body">
                    <h5 class="card-title">{{repos.name}} ({{repos.createdDate}})</h5>
                    <p class="card-text">{{repos.description}}</p>
                    <p></p>
                    <div class="card-buttons">
                        <a href="{{repos.url}}" class="btn btn-primary float-left">{{model.words.goToRepo}}</a>
                        <img alt="GitHub last commit" class="last-commit float-right" src="https://img.shields.io/github/last-commit/jhonnyli/{{repos.name}}">
                    </div>
                </div>
            </div>
        </div>

    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="float-right"><a href="{{model.gitHubUrl}}">{{model.words.gitHubProfile}}</a></div>
